@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<div class="flex flex-col justify-center items-center mx-auto max-w-screen-sm mt-28">
    <div class="w-full bg-white shadow-md rounded-lg p-6">
        <h1 class="text-2xl pb-3">@ViewData["Title"]</h1>
     
        <p class="font-medium">
            You have requested to log in with a recovery code. This login will not be remembered until you provide
            an authenticator app code at log in or disable 2FA and log in again.
        </p>
       
    
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
            <div class="mb-4">
                <label asp-for="Input.RecoveryCode" class="block text-sm font-medium text-gray-700">Recovery Code</label>
                <input asp-for="Input.RecoveryCode" class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" autocomplete="off" placeholder="Recovery Code" />
                <span asp-validation-for="Input.RecoveryCode" class="text-red-600 text-sm"></span>
            </div>
            <button type="submit" class="w-full py-2 px-4 bg-blue-700 text-white font-semibold rounded-lg shadow-md hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">Log in</button>

        </form>
      
    
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}