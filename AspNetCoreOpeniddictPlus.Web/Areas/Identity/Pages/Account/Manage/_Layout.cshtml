
@using Microsoft.AspNetCore.Mvc.ViewEngines
@inject IWebHostEnvironment Environment
@inject ICompositeViewEngine Engine
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AspNetCore OpeniddictPlus</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.min.css"/>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true"/>
    </environment>
</head>
<body class="grid grid-rows-[auto_1fr_auto] h-svh">
<header>
    <nav class="bg-white border-gray-200 dark:bg-gray-900 border-b-2">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
            <partial name="_LogoPartial" />
            <button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-default" aria-expanded="false">
                <span class="sr-only">Open main menu</span>
                <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
                </svg>
            </button>
            <div class="hidden w-full md:block md:w-auto" id="navbar-default">
                <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
                    <li>
                        Hey @User.Identity.Name
                    </li>
                    <li>
                        <form
                            asp-area="Identity"
                            asp-page="/Account/Logout"
                            asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                            method="post">
                            <button type="submit" class="text-blue-700 hover:text-blue-800 font-medium">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container mx-auto px-4 pt-5">
    <partial name="_CookieConsentPartial" optional/>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="md:col-span-1">
            <partial name="_ManageNav" />
        </div>
        <div class="md:col-span-3">
            @RenderBody()
        </div>
    </div>
</div>
<footer class="border-t py-3 text-gray-500">
    <div class="container mx-auto px-4">
        &copy; 2025 - AspNetCoreOpeniddictPlus.Web
        @{
            var foundPrivacy = Url.Page("/Privacy", new { area = "" });
        }
        @if (foundPrivacy != null)
        {
            <a asp-area="" asp-page="/Privacy" class="text-blue-500 hover:underline">Privacy</a>
        }
    </div>
</footer>

<environment include="Development">
    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
    <script src="~/Identity/js/site.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
    <script src="~/Identity/js/site.js" asp-append-version="true"></script>
</environment>

@await RenderSectionAsync("Scripts", false)
</body>
</html>
