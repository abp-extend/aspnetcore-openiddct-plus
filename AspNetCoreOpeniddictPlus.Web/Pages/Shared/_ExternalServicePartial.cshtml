<div class="w-full mt-5 shadow-md rounded-lg p-6">
    <section>
        <h3 class="text-2xl font-bold mb-4 text-gray-700">Social Logins</h3>
        <hr class="mb-6"/>
        @{
            if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <div class="text-gray-700">
                    <p>
                        There are no external authentication services configured. See this <a
                            href="https://go.microsoft.com/fwlink/?LinkID=532715"
                            class="text-indigo-600 hover:underline">article about setting up this ASP.NET application to
                            support logging in via external services</a>.
                    </p>
                </div>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl"
                      method="post" class="grid gap-4">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit"
                                class="w-full py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50"
                                name="provider" value="@provider.Name"
                                title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                    }
                </form>
            }
        }
    </section>
</div>